    <update id="update" parameterType="com.g12.entity.MusicCategory">
        UPDATE music_category
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            update_time = #{updateTime}
        </set>
        WHERE id = #{id}
    </update>

    <select id="getMusicInCategory" resultType="com.g12.entity.MusicResource">
        select mc.*
        from music_resource_category mrc left outer join music_category mc on mrc.category_id = mc.id
        where mrc.category_id = #{categoryId}
    </select>



